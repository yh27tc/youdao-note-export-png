{
  // 清单文件的版本，这个必须写，而且必须是2
    "manifest_version": 2,
    // 插件的名称
    "name": "有道云笔记全屏截图",
    // 插件的版本
    "version": "1.0.0",
    // 插件描述
    "description": "使用文明的方式把思维导图搞下来",
    // 图标，一般偷懒全部用一个尺寸的也没问题
    "icons":
    {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    // 需要直接注入页面的JS
    "content_scripts": 
    [
        {
        	// 允许在网页的iframe下注入
            "all_frames": true,
            //"matches": ["http://*/*", "https://*/*"],
            // "<all_urls>" 表示匹配所有地址
            "matches": ["https://note.youdao.com/ynoteshare*",
                "https://note.youdao.com/web*",
            	"https://note.youdao.com/mindmap*",
                "https://note.youdao.com/md/preview*"],
            // 多个JS按顺序注入
            "js": ["jquery-3.3.1.min.js", "html2canvas.min.js", "background.js"],
			// JS的注入可以随便一点，但是CSS的注意就要千万小心了，因为一不小心就可能影响全局样式
            "css": ["custom.css"],
			// 代码注入的时间，可选值： "document_start", "document_end", or "document_idle"，最后一个表示页面空闲时，默认document_idle
            "run_at": "document_start"
        }
	],
    // 权限申请
    "permissions":
    [
        "tabs", // 标签
        // "contextMenus", // 右键菜单
        // "notifications", // 通知
        // "webRequest", // web请求
        // "webRequestBlocking",
        // "storage", // 插件本地存储
        "http://*/*", // 可以通过executeScript或者insertCSS访问的网站
        "https://*/*" // 可以通过executeScript或者insertCSS访问的网站
    ]
}